@model  GEM.Models.TeamJourney

@{
    ViewBag.Title = "Select Journey";
}

<section class="col-lg-12">

    <div class="container">

        <div class="col-lg-12 dashboardcontent">

            <!--<div class="col-lg-3 left-mainlinks">

                <ul class="main-links-left">
                    --<a href=""> <li class="active"> <h3> Leader Profile </h3> <img src="../images/profile-menu-icon.png" alt="profile"> </li> </a>
                    <a href=""> <li> <h3> Manage Teams </h3> <img src="../images/team-menu-icon.png" alt="team"> </li> </a>--
                    <a href=""> <li class="active"> <h3> Journeys </h3> <img src="../images/journey-menu-icon.png" alt="journey"> </li> </a>
                </ul>

            </div>-->

            <div class="col-lg-8 center-secondarylinks">

                <div class="col-lg-12 topbararea">
                    <img src="../images/journey.png" alr="J"> <h4 class="journeytitle"> Select a Journey </h4>
                </div>

                <div class="row">

                    <div class="col-lg-12 journeys-list">
                        <ul>
                            @if (Model.JourneyList.Count > 0)
                            {
                                foreach (var journey in Model.JourneyList)
                                {
                                    if (journey.JourneyId == 1)
                                    {
                                        <a href=""><li class="active"> <img src="../images/jedi-icon.png"> Delivery Team - # Deliver Value to Customer </li> </a>
                                    }
                                    else if (journey.JourneyId == 2)
                                    {
                                         <a href=""><li> <img src="../images/rebel-icon.png"> Product Team - # Vision to Challange the Norm </li> </a>
                                    }
                                    else if (journey.JourneyId == 3)
                                    {
                                        <a href=""><li> <img src="../images/gaurdians-icon.png"> Enterprise Team - # Protectors and Gaurdians of Value </li> </a>
                                    }
                                    else
                                    {
                                        <a href=""><li> <img src="../images/galactica-icon.png"> Strategy Team - # Guides Strategy and Value </li> </a>
                                    }
                                }
                            }
                        </ul>

                    </div>

                </div>

            </div>

            <div class="col-lg-4 right-links">

                <div class="col-lg-12 topbararea">
                    <img src="../images/team-menu-icon.png" alr="Team"> <h4 class="journeytitle"> Teams </h4>
                </div>

                <div class="row">

                    <div class="col-lg-12 teams-control">

                        <div class="bs-example">
                            @Html.Partial("Team", Model.Journey)
                        </div>

                    </div>
                </div>

            </div>

</div>
        <div id="myModal" class="modal fade">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title">Invite Member</h4>
                    </div>
                    <div class="modal-body">
                        <img src="../images/inviatation-icon.png" /> <br>
                        <input type="email" name="invite-mail" id="mail-invitation" placeholder="Enter an E-Mail Address"> <br>
                        <p class="text-warning"><small>Enter an e-mail address to invite a new or an existing member</small></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Send Invitation</button>
                    </div>
                </div>
            </div>
        </div>

        <div id="teamModal" class="modal fade">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title">Add Team</h4>
                    </div>
                    <div class="modal-body">
                        <form class="create-team" method="post" name="team-form" action="team-page.html">

                            <div class="input-group team-group">
                                <label class="team-name"> Team Name </label>
                                <input type="text" class="form-control" placeholder="Enter a team name">
                            </div>

                            <div class="input-group team-group">
                                <label name="profile-pic"> Add an avathar </label>
                                <div class="input-group-append-img">
                                    <span class="input-group-text avatharimg" id="basic-addon2"><img src="../images/add-avathar-icon.png"></span>
                                </div>
                                <input type="file" name="pic" accept="image/*" class="form-control avatharspace" placeholder="Click to upload an image" aria-label="avathar">
                            </div>

                        </form>
                    </div>
                    <div class="modal-footer">
                        <input type="submit" class="btn btn-primary create-team-btn" placeholder="" value="Add Team" aria-label="create-team">
                    </div>
                </div>
            </div>
        </div>
    </div>
 </section>

<script type="text/javascript">
	jQuery(document).ready(function(){
		jQuery('#add-new-member').click(function(){
		jQuery('#myModal').modal('show');
		});
		jQuery('#add-new-team').click(function(){
		jQuery('#teamModal').modal('show');
		});
	});
</script>


