@model  GEM.Models.Mission_info
@{
    ViewBag.Title = "Mission";
}

<script src="~/Scripts/Mission/Mission.js" type="text/jscript"></script>
<section class="col-lg-12">
    <div class="container">

        <div class="col-lg-12 dashboardcontent">

            <div class="col-lg-8 center-secondarylinks start-mission">

                <div class="col-lg-12 topbararea missionteam">

                    @if (@Model.JourneyId == 1)
                    {
                        <img src="../images/jedi-icon.png" alr="J">
                        <h4 class="journeytitle"> Delivery Team - # Deliver Value to Customer </h4>
                    }
                    else if (@Model.JourneyId == 2)
                    {
                        <img src="../images/rebel-icon.png" alr="J">
                        <h4 class="journeytitle"> Product Team - # Vision to Challange the Norm </h4>
                    }
                    else if (@Model.JourneyId == 3)
                    {
                        <img src="../images/gaurdians-icon.png" alr="J">
                        <h4 class="journeytitle"> Enterprise Team - # Protectors and Gaurdians of Value </h4>
                    }
                    else
                    {
                        <img src="../images/galactica-icon.png" alr="J">
                        <h4 class="journeytitle"> Strategy Team - # Guides Strategy and Value </h4>
                    }
                </div>

                <div class="col-lg-12 missionhead">
                    <h3> @Model.fluencyName <span>[ Fluency Level 1 ]</span> </h3>
                </div>

                <div class="col-lg-12 mission-practices">

                    @if (Model.PracticeList.Count > 0)
                    {
                        for (int i = 0; i <= Model.PracticeList.Count - 1; i++)
                        {
                            if (i == 0)
                            {
                                <div class="col-lg-2 practiceblock">
                                    <span class="img-block">
                                        <img src="../images/rocket.png" alt="calendar">
                                        <h4> @Model.PracticeList[i].Name </h4>
                                    </span>
                                </div>
                            }
                            else if (i == 1)
                            {
                                <div class="col-lg-2 practiceblock">
                                    <span class="img-block">
                                        <img src="../images/astronaut.png" alt="calendar">
                                    </span>
                                    <h4 class="practicetitle"> @Model.PracticeList[i].Name </h4>
                                </div>
                            }
                            else if (i == 2)
                            {
                                <div class="col-lg-2 practiceblock">
                                    <span class="img-block">
                                        <img src="../images/black-hole.png" alt="calendar">
                                    </span>
                                    <h4 class="practicetitle"> @Model.PracticeList[i].Name </h4>

                                </div>
                            }
                            else if (i == 3)
                            {
                                <div class="col-lg-2 practiceblock">
                                    <span class="img-block">
                                        <img src="../images/event-schedule.png" alt="calendar">
                                    </span>
                                    <h4> @Model.PracticeList[i].Name </h4>
                                </div>
                            }
                            else if (i == 4)
                            {
                                <div class="col-lg-2 practiceblock">
                                    <span class="img-block">
                                        <img src="../images/recycling.png" alt="calendar">
                                    </span>
                                    <h4> @Model.PracticeList[i].Name </h4>
                                </div>
                            }
                        }
                    }

                </div>

                <div class="col-lg-12 startend-mission">
                    <form name="datetime" method="post" action="">

                        <div class="col-lg-6 datetimeselect">
                            <div class="input-group team-group">
                                <label name="sdatetime"> Start Date </label>
                                @*<span class="col-lg-6 selectdate">*@
                                <input type="date" id="dateStartdate" class="form-control" placeholder="" aria-label="date">
                                <div class="input-group-append">
                                    <span class="input-group-text" id="basic-addon2"><img src="../images/calander.png"></span>
                                </div>
                                @*</span>*@
                            </div>
                        </div>

                        <div class="col-lg-6 datetimeselect">
                            <div class="input-group team-group">
                                <label name="sdatetime"> End Date and Time </label>
                                <span class="col-lg-6 selectdate">
                                    <input type="date" id="dateEnddate" class="form-control" placeholder="" aria-label="date">
                                    <div class="input-group-append">
                                        <span class="input-group-text" id="basic-addon2"><img src="../images/calander.png"></span>
                                    </div>
                                </span>
                                <span class="col-lg-6 selecttime">
                                    <input type="time" id="timeEndtime" class="form-control" placeholder="" aria-label="time">
                                    <div class="input-group-append">
                                        <span class="input-group-text" id="basic-addon2"><img src="../images/time.png"></span>
                                    </div>
                                </span>
                            </div>
                        </div>

                    </form>
                </div>

                <div class="input-group create-team-btn-bg">
                    <input type="submit" id="btncreateMission" class="form-control create-team-btn" placeholder="" value="Away we go" aria-label="create-team">
                </div>

            </div>

            <div class="col-lg-4 right-links">

                <div class="col-lg-12 topbararea">
                    <img src="../images/team-menu-icon.png" alr="Team"> <h4 class="journeytitle"> Teams </h4>
                </div>

                <div class="row">

                    <div class="col-lg-12 teams-control">

                        <div class="bs-example">
                            <div class="panel-group" id="accordion">

                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        <h4 class="panel-title">
                                            <a data-toggle="collapse" data-parent="#accordion" href="#collapseTwo"> <img src="../images/add-avathar-icon.png"> Team01 (Name me soon)</a><span> </span>
                                        </h4>
                                    </div>
                                    <div id="collapseTwo" class="panel-collapse collapse">
                                        <div class="panel-body">
                                            <ul class="team-member-list">
                                                <li id="add-new-member"> <img src="../images/add-avathar-icon.png" width="32" height="32"><i>Add Member</i></li>
                                            </ul>
                                        </div>
                                    </div>

                                </div>

                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        <h4 class="panel-title add-team" id="add-new-team">
                                            <a data-toggle="collapse" data-parent="#accordion" href="#collapseThree"><img src="../images/add-avathar-icon.png"> Add Team </a>
                                        </h4>
                                    </div>
                                </div>

                            </div>

                        </div>

                    </div>

                </div>

            </div>

        </div> <!-- /1 dashboardbg -->

        <div id="myModal" class="modal fade">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title">Invite Member</h4>
                    </div>
                    <div class="modal-body">
                        <img src="../images/inviatation-icon.png" /> <br>
                        <input type="email" name="invite-mail" id="mail-invitation" placeholder="Enter an E-Mail Address"> <br>
                        <p class="text-warning"><small>Enter an e-mail address to invite a new or an existing member</small></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Send Invitation</button>
                    </div>
                </div>
            </div>
        </div>

        <div id="teamModal" class="modal fade">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title">Add Team</h4>
                    </div>
                    <div class="modal-body">
                        <form class="create-team" method="post" name="team-form" action="team-page.html">

                            <div class="input-group team-group">
                                <label class="team-name"> Team Name </label>
                                <input type="text" class="form-control" placeholder="Enter a team name">
                            </div>

                            <div class="input-group team-group">
                                <label name="profile-pic"> Add an avathar </label>
                                <div class="input-group-append-img">
                                    <span class="input-group-text avatharimg" id="basic-addon2"><img src="../images/add-avathar-icon.png"></span>
                                </div>
                                <input type="file" name="pic" accept="../image/*" class="form-control avatharspace" placeholder="Click to upload an image" aria-label="avathar">
                            </div>

                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                        <input type="submit" class="btn btn-primary create-team-btn" placeholder="" value="Add Team" aria-label="create-team">
                    </div>
                </div>
            </div>
        </div>
</section>

<script type="text/javascript">
   
    var _Mission = new Mission();
    _Mission.Load();

    jQuery(document).ready(function () {
        jQuery('#add-new-member').click(function () {
            jQuery('#myModal').modal('show');
        });
        jQuery('#add-new-team').click(function () {
            jQuery('#teamModal').modal('show');
        });
    });



</script>

<script>
    jQuery(document).ready(function () {

        jQuery('.navbar-toggle').click(function () {
            jQuery('.navbar-right').toggle();
        });
    });
</script>
