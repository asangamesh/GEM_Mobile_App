                        {
                            <p> Member </p>
                            @*<p> <a href="#" onclick="MemberProcess('../Journey/RemoveMember', @member.TeamJourneyMemberId,@member.TeamJourneyId);">Leave Team</a> </p> <a href="#" onclick="MemberProcess('../Journey/RemoveMember', @member.TeamJourneyMemberId,@member.TeamJourneyId);"><img src="../images/remove.png" width="16" height="16"> </a>*@
                        }
                        else
                        {
                            <p> Member </p>
                        }
                    </span>
                </li>
            }
        }
        @*if (Session["LoginMemberID"].ToString() == leaderId.ToString())
        {
