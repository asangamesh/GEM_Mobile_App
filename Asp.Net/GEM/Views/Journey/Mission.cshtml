@model  List<GEM.Models.mission>

@if (Model != null && Model.Count > 0)
{
    foreach (var mission in Model)
    {
        <div class="col-lg-6 practice-details">

            <div class="col-lg-12 mission-practices">

                <div class="col-lg-12 missionhead">
                    <h3> Launch Team </h3>
                </div>

                @foreach (var practice in mission.MissionPractice)
                {
                    <div class="col-lg-2 practiceblock">
                        <span class="img-block">
                            <img class="ObservationModal" id="@practice.MissionPracticeId" src='@string.Concat("../images/practice/practice", practice.practice.PracticeId, ".png")' alt="calendar">
                            <h4> @practice.practice.Name </h4>
                        </span>
                    </div>

                    <div id="ObservationModal_@practice.MissionPracticeId" class="modal fade">
                        <div class="modal-dialog" style="width: 65%;">
                            <div class="modal-content" style="text-align:left;">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                    <h4 class="panel-title">
                                        <img src='@string.Concat("../images/Practice/practice",practice.practice.PracticeId,".png")' style="width: 36px; height: 36px; background-color:white; border-radius:inherit; border:none;"> @practice.practice.Name @*<i> [ @practice.practice.fluency_level.ShortName ]</i>*@
                                    </h4>
                                </div>
                                <div class="modal-body">
                                    <div class="col-lg-12 team-details">
                                        <ul class="rating-list">
                                            @for (int i = 0; i < practice.practice.measures.Count; i++)
                                            {
                                                var assessmentId = 0;
                                                var assessment = 0;
                                                var measure = practice.practice.measures[i];
                                                string classname = "even", thumbsUp = "", thumbsDown = "", thumbsSideway = "";
                                                if (i % 2 == 0) { classname = "odd"; }

                                                if (measure.mission_member_measure_assesment.Count > 0)
                                                {
                                                    assessmentId = measure.mission_member_measure_assesment[0].MissionAssesmentId;

                                                    assessment = measure.mission_member_measure_assesment[0].Assesment;
                                                    if (assessment.Equals(5)) { thumbsUp = "active"; }
                                                    else if (assessment.Equals(1)) { thumbsDown = "active"; }
                                                    else if (assessment.Equals(3)) { thumbsSideway = "active"; }
                                                }

                                                <li class="@classname">
                                                    <span class="rating-item"> @(i + 1) . @measure.Measure1</span>
                                                    <span class="rating-icons practice_@practice.MissionPracticeId">
                                                        <input type="hidden" id='@string.Concat("Assessment_",@measure.MeasureId,"_",@practice.MissionPracticeId)' value="@assessmentId" />
                                                        @if (assessment == 5)
                                                        {
                                                            <span class="rating-icons1"><a href="#" id='@string.Concat("thumbs1_",@measure.MeasureId,"_",@practice.MissionId)' class="fa fa-thumbs-up @thumbsUp" style="font-size:22px"></a></span>
                                                            <span class="rating-icons2"><a href="#" id='@string.Concat("thumbs2_",@measure.MeasureId,"_",@practice.MissionId)' class="fa fa-thumbs-down @thumbsSideway" style="font-size:22px"></a></span>
                                                            <span class="rating-icons3"><a href="#" id='@string.Concat("thumbs3_",@measure.MeasureId,"_",@practice.MissionId)' class="fa fa-thumbs-down @thumbsDown" style="font-size:22px"></a></span>
                                                        }
                                                        else
                                                        {
                                                            <span class="rating-icons1"><a href="#" id='@string.Concat("thumbs1_",@measure.MeasureId,"_",@practice.MissionId)' onclick="vote('@string.Concat(@measure.MeasureId,"_",@practice.MissionId)', 1);" class="fa fa-thumbs-up @thumbsUp" style="font-size:22px"></a></span>
                                                            <span class="rating-icons2"><a href="#" id='@string.Concat("thumbs2_",@measure.MeasureId,"_",@practice.MissionId)' onclick="vote('@string.Concat(@measure.MeasureId,"_",@practice.MissionId)', 2);" class="fa fa-thumbs-down @thumbsSideway" style="font-size:22px"></a></span>
                                                            <span class="rating-icons3"><a href="#" id='@string.Concat("thumbs3_",@measure.MeasureId,"_",@practice.MissionId)' onclick="vote('@string.Concat(@measure.MeasureId,"_",@practice.MissionId)', 3);" class="fa fa-thumbs-down @thumbsDown" style="font-size:22px"></a></span>
                                                        }
                                                    </span>
                                                </li>
                                            }

                                        </ul>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <input type="button" id="btnSubmit_@practice.MissionPracticeId" onclick="submitObservation(@practice.MissionPracticeId,@practice.MissionId);" class="btn btn-primary review-submission" value="Submit" />
                                    @if (practice.practice.measures[0].mission_member_measure_assesment.Count == 0)
                                    {
                                        <input type="button" id="@practice.MissionPracticeId" class="btn btn-danger review-submission RejectionModal" value="Decline" />
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <div id="rejectionModal_@practice.MissionPracticeId" class="modal fade">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                    <h4 class="modal-title"> <img src="../images/rocket.png"> Form Delivery Team </h4>
                                </div>
                                <div class="modal-body">
                                    <div class="col-md-12 clspracticedesc rejectionform">
                                        <h4> Please enter the reason for rejection: </h4>
                                        <textarea name="reason" id="rejectReason_@practice.MissionPracticeId" class="rejection-text" placeholder="Enter the reason"> </textarea>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                                    <input type="button" id="btnDecline_@practice.MissionPracticeId" onclick="declineObservation(@practice.MissionPracticeId,@practice.MissionId);" class="btn btn-primary review-submission" value="Submit" />
                                </div>

                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <div class="col-lg-12 proceed-practice">

            <span class="col-lg-9 clsstartenddate">
                <div class="col-lg-6">
                    <p> <img src="../images/calander.png"> Start Date: <span> @mission.StartDate.ToShortDateString() </span></p>
                </div>
                <div class="col-lg-6">
                    <p> <img src="../images/calander.png"> End Date & Time: <span> @mission.EndDate.ToString() </span></p>
                </div>
            </span>
            @*<span class="col-lg-3">
                       <input formaction="" name="practice-proceed" onclick="window.location.href = '../Team/Measures?journeyId=@mission.TeamJourneyId';" class="proceedcls" type="submit" value="Proceed Practice">
                </span>*@
        </div>
    }
}
