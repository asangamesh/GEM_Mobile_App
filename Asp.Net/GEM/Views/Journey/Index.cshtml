@model  List<GEM.Models.JourneyInformation>

@{
    ViewBag.Title = "Select Journey";
}

<section class="col-lg-12">

    <div class="container">

        <div class="col-lg-12 dashboardcontent">

            <div class="col-lg-3 left-mainlinks">

                <ul class="main-links-left">
                    <!--<a href=""> <li class="active"> <h3> Leader Profile </h3> <img src="../images/profile-menu-icon.png" alt="profile"> </li> </a>
                    <a href=""> <li> <h3> Manage Teams </h3> <img src="../images/team-menu-icon.png" alt="team"> </li> </a>-->
                    <a href=""> <li class="active"> <h3> Journeys </h3> <img src="../images/journey-menu-icon.png" alt="journey"> </li> </a>
                </ul>

            </div>

            <div class="col-lg-6 center-secondarylinks">

                <div class="col-lg-12 topbararea">
                    <img src="../images/journey.png" alr="J"> <h4 class="journeytitle"> Select a Journey </h4>
                </div>

                <div class="row">

                    <div class="col-lg-12 journeys-list">
                        <ul>
                            @if (Model.Count > 0)
                            {
                                foreach (var journey in Model)
                                {
                                    var imageName = "../images/journey" + @journey.JourneyId + "-icon.png";
                                    <a href="../Team/Create?Journey=@journey.JourneyId"><li class="active"> <img src=@imageName> @journey.Name </li> </a>
                                }
                            }
                        </ul>

                    </div>

                </div>

            </div>

            <div class="col-lg-3 right-links">

                <ul class="main-links-right">
                    <a href=""> <li> Create Team <img src="../images/right-link-icon.png" alt="#"> </li> </a>
                    <a href=""> <li> Edit Team <img src="../images/right-link-icon.png" alt="#"> </li> </a>
                    <a href=""> <li> Select Journey <img src="../images/right-link-icon.png" alt="#"> </li> </a>
                    <a href=""> <li> View Practices <img src="../images/right-link-icon.png" alt="#"> </li> </a>
                    <a href=""> <li> View Results <img src="../images/right-link-icon.png" alt="#"> </li> </a>
                </ul>

            </div>

        </div>

    </div>

</section>

<script>
    jQuery(document).ready(function () {

        jQuery('.navbar-toggle').click(function () {
            jQuery('.navbar-right').toggle();
        });
    });
</script>

<script>
    var _Journey = new Journey();
    _Journey.Load();
</script>
