@model List<GEM.Models.mission>

@{
    ViewBag.Title = "View Practice";
}
<script src="~/Scripts/Team/Team.js" type="text/jscript"></script>
@if (Model != null)
{
    foreach (var mission in Model)
    {
        <section class="col-lg-12">

            <div class="container">

                <div class="col-lg-12 dashboardcontent memberarea">

                    <div class="col-lg-12 right-links">

                        <div class="col-lg-12 topbararea">
                            <img src="../images/rocket.png" alr="Team"> <h4 class="journeytitle"> @mission.Journey.Name </h4>
                            <h4 class="" style="float: left; width: 100%; position: relative; top: -40px; text-align: left; left: 80px;"> @mission.Team.Name </h4>
                        </div>

                        <div class="row">
                            <input type="hidden" id="missionId" value="@mission.MissionId" />
                            <input type="hidden" id="memberId" value="@Session["LoginMemberID"].ToString()" />
                            <div class="col-lg-12 teams-control">

                                <div class="bs-example">
                                    <div class="panel-group" id="accordion">
                                        @foreach (var practice in mission.MissionPractice)
                                        {
                                            <div class="panel panel-default">
                                                <div class="panel-heading">
                                                    <h4 class="panel-title">
                                                        <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne_@practice.practice.PracticeId"> <img src="../images/rocket.png"> @practice.practice.Name <i> [ @practice.practice.fluency_level.ShortName ]</i><span> <img src="../images/add-icon.png" alt="+"> </span></a>
                                                    </h4>
                                                </div>
                                                <div id="collapseOne_@practice.practice.PracticeId" class="panel-collapse collapse" style="width: 100%;">
                                                    @*<div class="panel-body">*@

                                                    <div class="col-lg-12 team-details">
                                                        <div class="rating-content">
                                                            <ul class="rating-list">
                                                                @for (int i = 0; i < practice.practice.measures.Count; i++)
                                                                {
                                                                    var assessmentId = 0;
                                                                    var assessment = 0;
                                                                    var measure = practice.practice.measures[i];
                                                                    string classname = "even", thumbsUp = "", thumbsDown = "", thumbsSideway = "";
                                                                    if (i % 2 == 0) { classname = "odd"; }

                                                                    if (measure.mission_member_measure_assesment.Count > 0)
                                                                    {
                                                                        assessmentId = measure.mission_member_measure_assesment[0].MissionAssesmentId;

                                                                        assessment = measure.mission_member_measure_assesment[0].Assesment;
                                                                        if (assessment.Equals(5)) { thumbsUp = "active"; }
                                                                        else if (assessment.Equals(1)) { thumbsDown = "active"; }
                                                                        else if (assessment.Equals(3)) { thumbsSideway = "active"; }
                                                                    }

                                                                    <li class="@classname">
                                                                        <span class="rating-item"> @(i + 1) . @measure.Measure1</span>
                                                                        <span class="rating-icons">
                                                                            <input type="hidden" id="Assessment_@measure.MeasureId" value="@assessmentId" />
                                                                            @if (assessment == 5)
                                                                            {
                                                                                <span class="rating-icons1"><a href="#" id="thumbs1_@measure.MeasureId" class="fa fa-thumbs-up @thumbsUp" style="font-size:22px"></a></span>
                                                                                <span class="rating-icons2"><a href="#" id="thumbs2_@measure.MeasureId" class="fa fa-thumbs-down @thumbsSideway" style="font-size:22px"></a></span>
                                                                                <span class="rating-icons3"><a href="#" id="thumbs3_@measure.MeasureId" class="fa fa-thumbs-down @thumbsDown" style="font-size:22px"></a></span>
                                                                            }
                                                                            else
                                                                            {
                                                                                <span class="rating-icons1"><a href="#" id="thumbs1_@measure.MeasureId" onclick="vote(@measure.MeasureId, 1)" class="fa fa-thumbs-up @thumbsUp" style="font-size:22px"></a></span>
                                                                                <span class="rating-icons2"><a href="#" id="thumbs2_@measure.MeasureId" onclick="vote(@measure.MeasureId, 2)" class="fa fa-thumbs-down @thumbsSideway" style="font-size:22px"></a></span>
                                                                                <span class="rating-icons3"><a href="#" id="thumbs3_@measure.MeasureId" onclick="vote(@measure.MeasureId, 3)" class="fa fa-thumbs-down @thumbsDown" style="font-size:22px"></a></span>
                                                                            }
                                                                        </span>
                                                                    </li>
                                                                }

                                                            </ul>
                                                            <div class="mission-member-buttons col-md-12">
                                                                <div class="row">
                                                                    <div class="review-submit-content">
                                                                        <input type="button" id="btnSubmitReview" class="btn btn-primary review-submission" value="Submit" />
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>

                                                    </div>

                                                    @*</div>*@
                                                </div>
                                            </div> <!-- panel default 1 -->

                                        }

                                        @*<div class="mission-member-buttons col-md-12">
                                                <div class="row">
                                                    <div class="review-submit-content">
                                                        <input type="button" id="btnSubmitReview" class="btn btn-primary review-submission" value="submit Review" />
                                                     </div>
                                                </div>
                                            </div>*@
                                    </div>

                                </div>

                            </div>

                        </div>

                    </div>

                </div> <!-- /1 dashboardbg -->

                <div id="myMemberModal" class="modal fade">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                <h4 class="modal-title">  @mission.Journey.Name </h4>
                            </div>
                            <div class="modal-body">

                                <div class="col-md-12 clsmissionduration">
                                    <h4> Team Name: <span> @mission.Team.Name </span> </h4>
                                    <h4> Start Date: <span> @mission.StartDate.ToShortDateString() </span> </h4>
                                    <h4> End Date: <span> @mission.EndDate.ToString() </span> </h4>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="submit" id="accept-practice-btn" class="btn btn-primary">Accept</button>
                                <button id="reject-practice-btn" type="submit" class="btn btn-danger">Reject</button>
                            </div>

                        </div>
                    </div>
                </div>

                <div id="rejectionModal" class="modal fade">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                <h4 class="modal-title"> <img src="../images/rocket.png"> Form Delivery Team </h4>
                            </div>
                            <div class="modal-body">
                                <div class="col-md-12 clspracticedesc rejectionform">
                                    <h4> Please enter the reason for rejection: </h4>
                                    <textarea name="reason" class="rejection-text" placeholder="Enter the reason"> </textarea>
                                </div>


                            </div>
                            <div class="modal-footer">
                                <!--<button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-danger" data-dismiss="modal">Close</button>-->
                                <input type="button" id="btnSubmitMeasure" class="btn btn-primary" value="Submit" />
                            </div>

                        </div>
                    </div>
                </div>

        </section>

    }
}
